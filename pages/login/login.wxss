/* pages/login/login.wxss */
page{
  background-color: #fff;
  width: 100%;
  height: 100%;
}
.bg_left{
  width: 21%;
  height: 31%;
  position: fixed;
  left: 0;
  bottom: 37.5%;
}
.bg_right{
  width: 30%;
  height: 31%;
  position: fixed;
  right: 0;
  bottom: 58%;
}
.bg_bottom{
  width: 100%;
  height: 23%;
  position: fixed;
  bottom: 0;
}
.logo{
  height: 48%;
}
.hdt_logo{
  width: 160rpx;
  height: 160rpx;
}
.small_live{
  width:224rpx;
  height:36rpx;
}
.register{
  width: 74%;
  margin: 0 13%;
}
.cancel{
  width:34vw !important;
  height:84rpx !important;
  background:rgba(238,238,238,1);
  border-radius:42rpx;
  font-size: 32rpx;
  border: none;
  outline: none;
