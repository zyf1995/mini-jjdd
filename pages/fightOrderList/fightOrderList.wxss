/* pages/fightOrderList/fightOrderList.wxss */
.allShop{
  border-left: 3px solid #000;
  text-indent: 48rpx;
}
.hrg_img {
  width: 30vw;
  min-width: 30vw;
  padding-bottom: 30vw;
  height: 0;
  position: relative;
}

.hrg_img image {
  position: absolute;
  width: 100%;
  height: 100%;
}


.hrg_tip>text.tip_right {
  background: #864502;
}

.user_order_list{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 24rpx;
  bottom: 200rpx;
}

.prefecture{
  border-radius: 16rpx;
}
.prefecture_item{
  background:rgba(255,233,229,1);
  border-radius:16rpx;
}
.siftLogo{
  width:240rpx;
  height:240rpx;
  border-radius:16rpx;
  display: block;
}
.goBuyRightNow{
  width:174rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,57,57,1) 0%,rgba(255,137,91,1) 100%);
  box-shadow:0px 2px 3px 0px rgba(255,184,168,1);
  border-radius:24rpx;
}