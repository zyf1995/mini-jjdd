/* pages/shareApp/shareApp.wxss */
.page{
  width: 100%;
  height: 100vh;
}
.ui_img {
  width: 80vw;
  height: 70vh;
  margin: 0 0 72rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
#banner{
  width: 80vw;
  height: 70vh;
}

.ui_btn {
  width: 80%;
  }
  
  .ui_btn  > view {
  width: 49%;
  height: 60rpx;
  line-height: inherit;
  border-radius: 12rpx;
  }
  .ui_btn > view.poster {
  background: #F44444;
  }

  /* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}
/* 弹出层 */
.dialog-wrap{
  width:70%;
  height: 240rpx;
  position:fixed;
  top:50%;
  left:0;
  right:0;
  z-index:9999;
  margin:0 auto;
  margin-top: -120rpx;
  background-color:#fff;
  border-radius:5px;
  display: flex;
  flex-direction: column;
  align-items:center;
}