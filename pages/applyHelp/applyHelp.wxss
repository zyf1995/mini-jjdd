/* pages/applyHelp/applyHelp.wxss */
@import "../../iconfont.wxss";
.gs_t_item {
    height: 96rpx;
    min-width: 50%;
    /*color: #0*/
}

.gs_t_item text {
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 28rpx;
    width: 80%;
}

.gs_t_item text.on {
    border-bottom: 4rpx solid red;
}

.gs_tabs .line {
    position: absolute;
    height: 4rpx;
    width: 50%;
    left: 0;
    bottom: 10rpx;
    transition: all 0.25s ease;
}

.gs_tabs .line text {
    width: 50%;
    height: 100%;
}
.gs_t_item1{
  height: 72rpx;
  min-width: 25%;
}
.gs_t_item1 text {
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 28rpx;
    width: 80%;
}
.gs_tabs_sub .gs_t_item {
    height: 72rpx;
    min-width: 25%;
}

.gs_tabs_sub .line {
    width: 25%;
    bottom: 0;
}
.personalDetails{
  background-color: #fff;
  height: 220rpx;
  padding: 0 28rpx;
}
.personalDetails .avatar_default{
  width:142rpx;
  height:142rpx;
  border-radius:50%;
  margin-right: 28rpx;
}
.personalDetails .cont1 text{
  display: inline-block;
  width:122rpx;
  height:38rpx;
  line-height: 38rpx;
  text-align: center;
  background:rgba(0,0,0,1);
  border-radius:18rpx;
  color: #FFBF41;
}
.personalDetails .cont2 text{
  color: #E20000;
}
.applyMoney .money{
  width: 25%;
  height: 104rpx;
  line-height: 104rpx;
  background-color: #fff;
  padding-left: 28rpx;
}
.applyMoney input{
  width: 75%;
  height: 104rpx;
  border: none;
}

.postProof{
  width: 100%;
  background-color: #fff;
}
.postProof image{
  width:150rpx;
  height:150rpx;
}
.footer{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  color: #FFC000;
  background-color: #000;
  position: fixed;
  bottom: 0;
  left: 0;
}
.helpDetail .li{
  position: relative;
  height: 124rpx;
  border-bottom: 2rpx solid #E6E6E6;
  padding-left: 28rpx;
}
.helpDetail .li .cont1{
  padding-top: 24rpx;
  height: 42rpx;
  line-height: 42rpx;
}
.helpDetail .li .cont2{
  height: 34rpx;
  line-height: 34rpx;
  color: #999;
}
.helpDetail .li .right{
  position: absolute;
  right: 28rpx;
}
.helpDetail .li .right .cont1{
  color: #FFBF41;
}
.helpDetail .li .right .cont2{
  color: #FFBF41;
}