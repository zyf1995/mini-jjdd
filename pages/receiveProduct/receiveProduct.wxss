/* pages/receiveProduct/receiveProduct.wxss */
/* pages/dsOrderConfirm/dsOrderConfirm.wxss */
@import "../../iconfont.wxss";
page{
  background-color: #fff;
  padding-bottom: 96rpx;
}
.padding_custom {
    padding: 24rpx 36rpx;
}
.oc_a_type{
  width:194rpx;
  height:62rpx;
  background:rgba(255,163,3,1);
  border-radius:28rpx;
  text-align: center;
}
.oc_a_type text:nth-child(2){
  margin-left: -12rpx;
}
.oc_a_type text{
  display: inline-block;
  width:85rpx;
  height:48rpx;
  line-height: 48rpx;
  border-radius:24rpx;
}
.oc_a_type text.active{
  background:rgba(255,255,255,1);
  color: #FFA303;
}
.oc_address {
    padding: 36rpx 24rpx;
}

.oc_address text {
    min-width: 72rpx;
    text-align: center;
}
.oc_address text.icon-jia {
  font-size: 80rpx;
}
.oc_address text.arrow-right-bold {
    margin-left: 24rpx;
}

.oc_address text.address2 {
    margin-right: 24rpx;
}

.oc_address text.icon-address2 {
    font-size: 40rpx;
}

.oc_address .oc_a_info {
    width: 70%;
}



.oc_address .oc_a_username {
    margin-bottom: 20rpx;
}

.oc_i_shopInfo image {
    width: 34rpx;
    height: 30rpx;
    margin-right: 24rpx;
}

.oc_i_g_img {
    min-width: 168rpx;
    width: 168rpx;
    height: 168rpx;
}
.oc_i_goodsInfo .left{
  width: 30%;
}
.oc_i_g_cnt{
  width: 70%;
}
.oc_i_g_name, .oc_i_g_type {
    margin-bottom: 20rpx;
}
.oc_i_g_name>view:nth-child(1){
  width: 60%;
}
.oc_i_g_name>view:nth-child(2){
  width: 40%;
  margin-right: 24rpx;
}
.oc_i_g_type {
    height: 48rpx;
}

/*.oc_i_g_price {
    width: 100%;
}*/

.oc_i_message input {
    width: 75%;
    border: none;
}

.oc_ig_input {
    width: 30%;
    border: 2rpx solid #000;
    height: 48rpx;
    border-radius: 10rpx;
    margin: 0 12rpx;
    text-align: center;
    padding: 0rem;
    max-width: 30%;
}

.order_confirm_footer {
    position: fixed;
    width: 100%;
    height: 96rpx;
    bottom: 0;
    left: 0;
    box-sizing: border-box;
}

.order_confirm_footer>view {
    width: 33.33%;
}

.order_confirm_footer .submit {
    width: 25%;
    height: 100%;
    background:rgba(255,163,3,1);
    box-shadow:0px -1px 0px 0px rgba(231,231,231,1);
}

.order_pay {
    position: fixed;
    bottom: 0;
    z-index: 10000;
}

.order_pay image {
    width: 48rpx;
    height: 48rpx;
}

.order_pay .common_submit_btn {
    width: 90%;
    border-radius: 48rpx;
}

.order_pay .op_close {
    position: absolute;
    right: 24rpx;
    top: 14.4rpx;
}

.op_title text {
    width: 48rpx;
    height: 48rpx;
    background: red;
    border-radius: 50%;
}

.op_price {
    border-bottom: 4rpx dashed #efefef;
}

.order_pay input {
  border: none;
}
.iconfont.icon-lock {
  margin-right: 24rpx;
  font-size: 36rpx;
}

