/* pages/fightOrderDetail/fightOrderDetail.wxss */
@import "../../iconfont.wxss";
#banner {
  width: 100vw;
  height: 100vw;
}
#banner swiper-item{
  width: 100vw;
  height: 100vw;
}
#banner image{
  width: 100vw;
  height: 100vw;
}
.freeBuy{
  padding: 7.2rpx 19.2rpx;
  background:rgba(254,231,79,1);
  border-radius:4rpx;
}
.order_record_icon{
  width:38rpx;
  height:34rpx;
}
.orderRecond{
  width:calc( 100% - 48rpx );
  height:56rpx;
  background-image: url(http://hdt.hdtapp.com/wxbackground/order_record_bg.png);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.avatar_default{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  display: block;
}
.goFightOrder{
  padding: 12rpx;
  background:rgba(255,53,53,1);
  border-radius:10rpx;
}
.cart_box{
    position: fixed;
    z-index: 1000;
    background: #fff;
    width: 90%;
    max-height: 90vh;
    top: 5%;
    left: 5%;
    border-radius: .19.2rpx;
}

.orderItem:last-child{
  border: none;
}
.orderItem .left{
  max-width: 50%;
}
.orderItem .left .nickname{
  width: 50%;
}
.orderList{
  max-height: 80vh;
  overflow-y: scroll;
}
.close_icon{
  width:28rpx;
  height:28rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}
.footer{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
}
.productDetail{
  padding-bottom: 120rpx;
}
.footer>view:nth-child(1){
  width:50%;
  height:100rpx;
  background:linear-gradient(90deg,rgba(255,154,46,1) 0%,rgba(255,114,0,1) 100%);
}
.footer>view:nth-child(2){
  width:50%;
  height:100rpx;
  background:rgba(255,53,53,1);
}
/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}
/* 弹出层 */
.dialogModel{
  width:90%;
  max-height: 90vh;
  position:fixed;
  top:5%;
  left:5%;
  z-index:9999;
  background-color:#fff;
  border-radius:20rpx;
}
.user_order_list{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  right: 24rpx;
  bottom: 200rpx;
}

.order_pay {
  position: fixed;
  bottom: 0;
  z-index: 9999;
}

.order_pay image {
  width: 48rpx;
  height: 48rpx;
}

.order_pay .common_submit_btn {
  width: 90%;
  border-radius: 48rpx;
}

.order_pay .op_close {
  position: absolute;
  right: 24rpx;
  top: 14.4rpx;
}

.op_title text {
  width: 48rpx;
  height: 48rpx;
  background: red;
  border-radius: 50%;
}

.op_price {
  border-bottom: 2px dashed #efefef;
}
.padding_custom {
  padding: 24rpx 36rpx;
}


.dialogModel2{
  width:90%;
  position:fixed;
  top: 0;
  left: 5%;
  margin: auto 0;
  z-index:9999;
  background-color:#fff;
  border-radius:20rpx;
}