/* // 共用order-list中的订单信息样式 */

.padding_custom {
    padding: 20rpx 24rpx;
}

.ol_i_shopInfo {
    padding: 20rpx 48rpx;
}

.ol_i_shopInfo>img {
    width: 72rpx;
    height: 72rpx;
    margin-right: 24rpx;
    border-radius: 20rpx;
}

.ol_i_shopInfo .ol_i_s_name {
    max-width: 70%;
    margin-right: 24rpx;
}

.ol_i_goodsInfo .ol_i_g_img {
    min-width: 156rpx;
    width: 156rpx;
    height: 156rpx;
    margin-right: 24rpx;
}

.ol_i_goodsInfo .ol_i_g_name {
    width: 70%;
}

.ol_i_goodsInfo .ol_i_g_one {
    align-items: flex-start;
    margin-bottom: 36rpx;
}

.ol_i_goodsInfo .ol_i_g_two {
    width: 100%;
}

.ol_i_goodsInfo .ol_i_g_type {
    max-width: 80%;
}

.red_btn {
    min-width: 25%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border: 2rpx solid #e74143;
    border-radius: 10rpx;
    color: #e74143;
}

.black_btn {
    min-width: 25%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border: 2rpx solid #000;
    border-radius: 10rpx;
    margin: 0 24rpx;
}

.bottom_act {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 96rpx;
    background: #fff;

}

.bottom_act .btn {
    width: 15%;
    color: #666666;
}

.bottom_act .buy {
    width: 30%;
    color: #fff;
    height: 100%;
}

.bottom_act .buy.bg_black {
    height: 48rpx;
    line-height: 48rpx;
    margin: 12rpx;
    border-radius: 24rpx;
    background: #fff;
    border: 2rpx solid #000;
    color: #000;
}

.bottom_act .buy.bg_red {
    height:48rpx;
    line-height: 48rpx;
    margin: 0 12rpx;
    border-radius: 24rpx;
    background: #fff;
    border: 2rpx solid red;
    color: red;
}


.order_pay {
    position: fixed;
    bottom: 0;
    z-index: 10000;
}

.order_pay img {
    width: 48rpx;
    height: 48rpx;
}

.order_pay .common_submit_btn {
    width: 90%;
    border-radius: 48rpx;
}

.order_pay .op_close {
    position: absolute;
    right: 24rpx;
    top: 14.4rpx;
}

.op_title span {
    width: 48rpx;
    height: 48rpx;
    background: red;
    border-radius: 50%;
}

.op_price {
    border-bottom: 4rpx dashed #efefef;
}

.backdrop-enter, .backdrop-leave-to {
    opacity: 0;
}

.backdrop-enter-active, .backdrop-leave-active {
    transition: all 0.5s;
}

.slideUp-enter, .slideUp-leave-to {
    transform: translateY(100%);
}

.slideUp-enter-active, .slideUp-leave-active {
    transition: all 0.5s;
}

.order_pay input {
  border: none;
}
.iconfont.icon-lock {
  margin-right: 24rpx;
  font-size: 36rpx;
}


