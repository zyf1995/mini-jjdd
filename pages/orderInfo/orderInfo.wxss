    font-size: 50rpx;

}

.orderInfo-expressInfo {
    background: #fff;
    border-bottom: solid 2rpx #E0E0E0;
    height: 480rpx;
    overflow: scroll;
    margin: 0
}

.orderInfo-expressInfo dt {
    padding: 20rpx 20rpx 20rpx;
    border-bottom: solid 2rpx #E0E0E0;
}

.orderInfo-expressInfo dd {
  padding: 0 20rpx;
  position: relative;
  padding-left: 100rpx;
  margin: 0;
}

.orderInfo-expressInfo dd i {
  color: #999;
  font-size: 24rpx;
  width: 90rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
}

.orderInfo-expressInfo dd div {
    border-left: solid 2rpx #E0E0E0;
    padding: 20rpx 20rpx;
    position: relative;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.orderInfo-expressInfo dd div b {
  position: absolute;
  top: 20rpx;
  left: -20rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #E7E7E7;
  border: solid 10rpx #fff;
}

.orderInfo-expressInfo dd i.oe_time {
    top: -10rpx
}



.fade-enter-active, .fade-leave-active {
    transition: opacity 0.5s
}
.fade-enter, .fade-leave-to /* .fade-leave-active, 2.1.8 版本以下 */ {
    opacity: 0
}

