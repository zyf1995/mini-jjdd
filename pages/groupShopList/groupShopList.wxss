/* pages/groupShopList/groupShopList.wxss */
page{
  background-color: #fff;
}
.goodsItem{
  width:calc( 90% - 48rpx );
  margin: 0 auto 24rpx;
  background:rgba(255,233,229,1);
  border-radius:16rpx;
}
.branchShop{
  width:220rpx;
  height:220rpx;
  border-radius:8px;
}
.goodsItem .top .left{
  width: 60%;
}
.goodsItem .top .right{
  width: 40%;
}
.weekBuy{
  padding: 7.2rpx;
  background-color: #FF3535;
  border-radius:4rpx;
}
.goodsItem .bottom{
  width:100%;
  height:48rpx;
  background:rgba(255,219,212,1);
}
.goBuy{
  width:25%;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,57,57,1) 0%,rgba(255,137,91,1) 100%);
  box-shadow:0px 2px 3px 0px rgba(255,184,168,1);
  border-radius:24rpx;
}
