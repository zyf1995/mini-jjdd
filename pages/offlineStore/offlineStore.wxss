/* pages/offlineStore/offlineStore.wxss */
@import "../../iconfont.wxss";
#header input{
  width: 70vw;
  height: 64rpx;
  background:rgba(238,238,238,1);
  border-radius:32rpx;
  border: none;
  outline: none;
  margin: 0 3%;
  padding-left: 68rpx;
  background-image:url('https://testhdt.teadrf.cn/wxbackground/search_icon.png');
  background-repeat: no-repeat;
  background-size: 32rpx 32rpx;
  background-position: 24rpx center;
}
#banner{
  width: 100%;
  /*margin: 0 3%;*/
  height: 302rpx;
}
#banner image{
  width: 94%;
  margin: 0 3%;
  height: 100%;
  border-radius:20rpx;
}

.shopList .left{
  width: 35%;
}
.shopList .right{
  width: 65%;
}
.shopList .left image{
  width: 192rpx;
  height: 172rpx;
  border-radius:10rpx;
}
.shopList .right .star{
  width: 12rpx;
  height: 12rpx;
}
.shopList .right .map{
  width: 24rpx;
  height: 24rpx;
}
.addAlliance{
  width: 56rpx;
  height: 32rpx;
  line-height: 32rpx;
}
.adress{
  width: 70%;
}
.navigation{
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 24rpx;
  background-color: #ffba15;
}
.navigation_icon{
  width: 24rpx;
  height: 24rpx;
}
/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}
/* 弹出层 */
.dialog-wrap{
  width:90%;
  position:fixed;
  left:5%;
  bottom:12rpx;
  z-index:9999;
  background-color:#fff;
  border-radius:5px;
}