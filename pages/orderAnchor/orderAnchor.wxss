#header .go_back i{
  color: #fff !important;
  font-size: 35rpx !important;
}
page{
  width: 100%;
  height: 100%;
}
#orderAnchor{
  width: 100%;
  height: 100%;
  background-image: url(../../image/doorShop/naoka.png);
  background-size: cover;
  background-repeat: no-repeat;
}
.anchorAvator{
  width:196rpx;
  height:196rpx;
  border-radius:10rpx;
  margin-top: 122rpx;
}
.liveTime{
  margin: 120rpx 0 164rpx;
}
.liveTime .countDown text{
  display: inline-block;
  width:48rpx;
  height:48rpx;
  line-height: 48rpx;
  text-align: center;
  background:rgba(255,57,71,1);
  border-radius:10rpx;
}
.non_arival{
  color:rgba(255,255,255,1);
  opacity:0.5;
}
.startLive{
  width:80%;
  height:85rpx;
  margin: 0 10% 24rpx;
  background:linear-gradient(270deg,rgba(255,53,53,1) 0%,rgba(255,144,35,1) 100%);
  border-radius:48rpx;
}
.startLive1{
  width:80%;
  height:85rpx;
  margin: 0 10% 24rpx;
  background:#ff3947;
  border-radius:48rpx;
}
.liveWarm{
  width:80%;
  height:85rpx;
  margin: 0 10%;
  border:2rpx solid rgba(255,255,255,1);
  border-radius:48rpx;
}
