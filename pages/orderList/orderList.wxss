/* pages/orderList/orderList.wxss */
@import "../../iconfont.wxss";
.nav {
width: 100%;
overflow: hidden;
position: relative;
top: 0;
left: 0;
z-index: 10;
background: #ff8339;
}
 
.title_text {
width: 100%;
height: 88rpx;
color: white;
line-height: 88rpx;
text-align: center;
position: absolute;
bottom: 0;
left: 0;
z-index: 10;
font-size: 32rpx;
}
 
.title_icon {
position: absolute;
height: 88rpx;
bottom: 0;
left: 0;
z-index: 20;
}
.title_icon text{
  position: absolute;
  left: 10rpx;
}
page{
  padding-bottom: 60rpx;
}
.padding_custom {
    padding: 20rpx 48rpx;
}
.order_type{
  display: inline-block;
  width:70rpx;
  height:38rpx;
  line-height: 38rpx;
  text-align:center;
  background:rgba(255,163,3,1);
  border-radius:10rpx;
  color: #fff;
  font-size: 24rpx;
  margin-right: 12rpx;
}
.ttt text{
    font-size: 28rpx;
    font-weight: 700;
}
.header_wrapper {
  height: 100rpx;
}
.gs_tabs{
  position: sticky;
  position: -webkit-sticky;
  left: 0;
  top: 96rpx;
  z-index: 120;
}
.gs_t_item {
    height: 96rpx;
    min-width: 20%;
    /*color: #0*/
}
.gs_t_item text {
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 28rpx;
    width: 80%;
}
.gs_t_item text.on {
    border-bottom: 4rpx solid #fff;
}
.gs_tabs .line {
    position: absolute;
    height: 4rpx;
    width: 20%;
    left: 0;
    bottom: 10rpx;
    /*transform: translateX(100%);*/
    transition: all 0.25s ease;
}
.gs_tabs .line text {
    width: 70%;
    height: 100%;
    background: #FFBF41;
}
.gs_tabs.gs_tabs_sub{
    position: sticky;
    position: -webkit-sticky;
    left: 0;
    top: 0;
    z-index: 120;
}
.gs_tabs.gs_tabs_sub .gs_t_item {
    height: 3rem;
    min-width: 50%;
}
.gs_tabs.gs_tabs_sub .line text{
  background: red;
}
.gs_tabs.gs_tabs_sub .line {
    width: 50%;
    bottom: 0;
}

.ol_i_shopInfo {
    padding: 22rpx 48rpx;
}

.ol_i_shopInfo .ol_i_s_name {
    max-width: 70%;
    margin-right: 24rpx;
}

.ol_i_goodsInfo {
    background: #EFEFEF
}

.ol_i_goodsInfo .ol_i_g_img {
    width: 156rpx;
    height: 156rpx;
    margin-right: 24rpx;
}

.ol_i_goodsInfo .ol_i_g_name {
    width: 70%;
}

.ol_i_goodsInfo .ol_i_g_one {
    align-items: flex-start;
    margin-bottom: 36rpx;
    width: 100%;
}

.ol_i_goodsInfo .ol_i_g_two {
    width: 100%;
}

.ol_i_goodsInfo .ol_i_g_type {
    max-width: 80%;
}

.ol_l_o_info {
    line-height: 2;
}

.red_btn {
    min-width: 25%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border: 2rpx solid #e74143;
    border-radius: 20rpx;
    color: #e74143;
}

.black_btn {
    min-width: 25%;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border: 2rpx solid #000;
