/*订单详情中的物流信息*/

.delivery_wrapper {
    position: fixed;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    /*animation: fadeInDown 1s;*/
    /*transition: all 1s;*/
}

.delivery_box {
    width: 75%;
}

.db_top {
    background: #2CA0F7;
}

.db_t_title {
    margin: 24rpx 0;
}

.db_t_img {
    width: 108rpx;
    min-width: 108rpx;
    height: 108rpx;
}

.db_t_name {
    width: 85%;
}

.delivery_close {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    font-size: 50rpx;

}

.orderInfo-expressInfo {
    background: #fff;
    border-bottom: 2rpx solid #E0E0E0;
    height: 20rem;
    overflow: scroll;
    margin: 0;
}

.orderInfo-expressInfo dt {
    padding: 20rpx 20rpx 20rpx;
    border-bottom: solid 2rpx #E0E0E0;
}

.orderInfo-expressInfo dd {
  padding: 0 20rpx;
  position: relative;
  padding-left: 100rpx;
  margin: 0;
}

.orderInfo-expressInfo dd text {
  color: #999;
  font-size: 24rpx;
  width: 90rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
}

.orderInfo-expressInfo dd view {
    border-left: 2rpx solid #E0E0E0;
    padding: 20rpx 20rpx;
    position: relative;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.orderInfo-expressInfo dd view b {
  position: absolute;
  top: 20rpx;
  left: -20rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #E7E7E7;
  border: 10rpx solid #fff;
}

.orderInfo-expressInfo dd text.oe_time {
    top: -10rpx
}



.fade-enter-active, .fade-leave-active {
    transition: opacity 0.5s
}
.fade-enter, .fade-leave-to /* .fade-leave-active, 2.1.8 版本以下 */ {
    opacity: 0
}


.shop_name{
    font-weight: 700;
    font-size: 28rpx;
}
