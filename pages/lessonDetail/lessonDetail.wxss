/* packageB/pages/lessonDetail/lessonDetail.wxss */
@import "../../iconfont.wxss";
@import "../../wxParse/wxParse.wxss";
.firstJoin,.secondJoin{
  width: 40vw;
  position: relative;
}
#banner{
  width: 100vw;
  height: 100vw;
}
.firstJoin view{
  width:124rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,57,57,1) 0%,rgba(255,168,81,1) 100%);
  border-radius:10rpx;
  position: absolute;
  right: 24rpx;
}
.secondJoin view{
  width:3.333rem;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  background:#ff8a14;
  border-radius:10rpx;
  position: absolute;
  right: 24rpx;
}
.width60{
  width: 60%;
}
.lesson_map_icon{
  width: 24rpx;
  height: 30rpx;
}

.footer{
  width: 100%;
  height: 112rpx;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.lesson_share_icon{
  width: 36rpx;
  height: 36rpx;
}
.footer .right view.first{
  width:74vw;
  height:76rpx;
  line-height: 76rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,57,57,1) 0%,rgba(255,168,81,1) 100%);
  box-shadow:0px 10rpx 20rpx 0px rgba(255,215,183,1);
  border-radius:36rpx;
}
.footer .right view.second{
  width:74vw;
  height:76rpx;
  line-height: 76rpx;
  text-align: center;
  background:#ff8a14;
  box-shadow:0px 10rpx 20rpx 0px rgba(255,215,183,1);
  border-radius:36rpx;
}
.tab view{
  width: 50vw;
  height: 106rpx;
  line-height: 106rpx;
}
.nav-switch-style{
  font-weight: bold;
  font-size: 34rpx;
  color: #FF8A14;
}
.rich-text{
  padding-bottom: 112rpx;
}
.item{
  display: none;
  padding-bottom: 112rpx;
}
.item.active{
  display: block;
}
rich-text .rich-img {
  width: 100% !important;
  height: auto;
  display: block;
}
/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}
/* 弹出层 */
.dialog-wrap{
  width:70%;
  height: 240rpx;
  position:fixed;
  top:50%;
  left:0;
  right:0;
  z-index:9999;
  margin:0 auto;
  margin-top: -120rpx;
  background-color:#fff;
  border-radius:5px;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.btn{
background-color: #fff;
border: 1px solid #f2f2f2;
}
.dialogModel{
width:80vw;
position:fixed;
top:25rpx;
left:0;
right:0;
z-index:9998;
margin:0 auto;
background-color:#fff;
border-radius:5px;
display: flex;
flex-direction: column;
align-items:center;
}
.ui_img {
width: 80vw;
height: 80vh;
margin: 0 0 72rpx;
border-radius: 24rpx;
overflow: hidden;
}
.ui_img image{
width: 100%;
height: 100%;
margin-top: 24rpx;
}
.ui_btn1 {
width: 80%;
}

.ui_btn1  > view {
width: 49%;
height: 60rpx;
line-height: inherit;
border-radius: 12rpx;
}
.ui_btn1 > view.poster {
background: #F44444;
}