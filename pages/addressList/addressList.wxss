/* pages/addressAdd/addressAdd.wxss */
@import "../../iconfont.wxss";
page{
  background-color: #fff;
}
.padding_custom {
      padding: 24rpx 36rpx;
}

.us_avatar {
    padding: 24rpx 0;
}

.us_avatar image {
    width: 120rpx;
    height: 120rpx;
    object-fit: cover;
}

.us_list {
    padding: 0 24rpx;
    margin-bottom: 100rpx;
}

.us_item {
    line-height: 3.6;
}
.us_item text{
  display: inline-block;
  width: 40%;
}
.us_item i {
    font-size: 48rpx;
    line-height: 1.8;
}

.bottom_bar {
    height:120rpx;
    line-height: 120rpx;
    position: fixed;
    bottom: 0;
    font-size: 30rpx;
}

.bottom_bar view{
  width: 90%;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 12rpx;
  font-size: 34rpx;
}

.uun_input input {
    line-height: 60rpx;
    height: 60rpx;
}

.input2 {
    height:108rpx;
    padding: 24rpx 36rpx;
}

.input2 text {
    width: 20%;
    min-width: 20%;
}

.input2 input {
        max-width: 50%;
}

.common_submit_btn {
    margin: 72rpx auto;
}

.send {
    width: 120rpx;
    padding: 9.8rpx 12rpx;
    border: 2rpx solid red;
    color: red;
    border-radius: 126rpx;
    text-align: center;
}

.input2 .icon-down-arrow, .input2 .icon-shangjiantou {
    width: 72rpx;
    font-size: 48rpx;
}

input[disabled] {
    background: transparent;
}

.bank_list {
    height: 0;
    transition: height 300ms;
    font-size: 28rpx;
    max-height: 312rpx;
    overflow-y: scroll;
    background: linear-gradient(to bottom, #f44444, #F48784);
    color: #fff;
}

.bank_list.on {
    height: 288rpx;
}

.bank_list li {
    height: 72rpx;
    line-height: 72rpx;
}

/* // 共用地址列表为空时的样式 */
.al_empty {
  width: 100%;
  height: 100%;
}
.al_empty .al_e_img {
  width: 264rpx;
  height: 264rpx;
  margin-bottom: 48rpx;
  background: #dbdbdb;
  border-radius: 50%;
}
.al_empty .al_e_img image {
  width: 70%;
  height: 70%;
}


