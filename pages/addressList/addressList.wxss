}*/
.user_address_list .common_submit_btn {
  margin: 20rpx auto 48rpx;
  border-radius: 20rpx;
  width: 85%;
}
.user_address_list .al_empty {
  width: 100vw;
  height: 100vh;
}
.user_address_list .al_empty .al_e_img {
  width: 264rpx;
  height: 264rpx;
  margin-bottom: 48rpx;
  background: #dbdbdb;
  border-radius: 50%;
}
.user_address_list .al_empty .al_e_img image {
  width: 70%;
  height: 70%;
}
.user_address_list .al_item i {
  color: #999;
}
.user_address_list .al_i_info,
.al_i_act {
  padding: 24rpx;
}
.user_address_list .al_i_a_edit {
  margin: 0 24rpx;
}
.user_address_list .common_radio {
  min-width: 36rpx;
  min-height: 36rpx;
  border: 2rpx solid #999;
}
.user_address_list .common_radio.on {
  border:none
}


.input2 .common_radio {
  width: 36rpx;
  height: 36rpx;
  min-width: 36rpx;
  min-height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #e8f0fe;
  position: relative;
  display: inline-block;
}



.alert_wrapper {
    width: 100vw;
    height: 100vh;
    z-index: 10000;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.alert_wrapper_content {
    width: 65vw;
    height: 408rpx;
    display: flex;
    align-items: flex-end;
    background: url(../../image/new_version.png) no-repeat 0 0;
    background-size: 100% 100%;
}

.alert_wrapper .common_submit_btn {
    height: 55rpx;
    width: 45%;
    line-height: 55rpx;
    border-radius: 12rpx;
    margin: 0;
}

.alert_wrapper .icon-arrow-right2 {
    font-size: 60rpx;
    color: #C7C7C7;
}
