/* packageA/pages/searchList/searchList.wxss */
@import "../../../iconfont.wxss";
page{
  width: 100%;
  height: 100%;
}
#header input{
  width: 70vw;
  height: 64rpx;
  background:rgba(238,238,238,1);
  border-radius:32rpx;
  border: none;
  outline: none;
  margin: 0 3%;
  padding-left: 68rpx;
  background-image:url('https://testhdt.teadrf.cn/wxbackground/search_icon.png');
  background-repeat: no-repeat;
  background-size: 32rpx 32rpx;
  background-position: 24rpx center;
}
.gcl_tab {
  width: 100%;
  padding:12rpx 0;
  position: fixed;
  top: 100rpx;
  z-index: 100;
}
.gcl_t_item {
    width: 33.3%;
    height: 60rpx;
}

.gcl_t_item.on {
    color: #FFBF41;
}
.h_red_goods{
  margin-top: 100rpx;
}
.searchResult{
  width:24rpx;
  height:24rpx;
}
.hdtStore{
  color: #A6A6A6;
}
.hrg_tip>text{
  max-width: 60%;
}
.hrg_tip>text.volume{
  color: #A6A6A6;
  background-color: #fff;
  position:absolute;
  right: 12rpx;
}
.hrg_tip>text.tip_left{
    background: #FF7800 !important;
}
.hrg_tip{
  float: left;
}
.hrg_tip>text.tip_right {
    color: #993333 !important;
    background: #FDD380 !important;
}



