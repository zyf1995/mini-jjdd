/* packageA/pages/goodsSearch/goodsSearch.wxss */
@import "../../../iconfont.wxss";
page{
  width: 100%;
  height: 100%;
}
#header input{
  width: 70vw;
  height: 64rpx;
  background:rgba(238,238,238,1);
  border-radius:32rpx;
  border: none;
  outline: none;
  margin: 0 3%;
  padding-left: 68rpx;
  background-image:url('https://testhdt.teadrf.cn/wxbackground/search_icon.png');
  background-repeat: no-repeat;
  background-size: 32rpx 32rpx;
  background-position: 24rpx center;
}
.gcl_tab {
  width: 100%;
  padding:12rpx 0;
  position: fixed;
  top: 100rpx;
  z-index: 100;
}
.gcl_t_item {
    width: 50%;
    height: 60rpx;
}

.gcl_t_item.on {
    color: #FFBF41;
}
.h_red_goods{
  margin-top: 100rpx;
}